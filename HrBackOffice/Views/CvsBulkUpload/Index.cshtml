@model IEnumerable<BulkCvsJobsHistory>
@{
    ViewBag.Title = "Bulk Upload";
}

<div class="container">
    <div class="card mt-4 border-0">
        <div class="card-header bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Uploading CVs Background jobs History</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="CvsBulkUpload" asp-action="UploadingFiles" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New Job
                    </a>
                </div>
            </div>
        </div>
    </div>
    <table id="myTable" class="table-bordered table-striped w-100 table">
        <thead>
            <tr>
                <th>Started By</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Total Files</th>
                <th>Successful Files</th>
                <th>Failed Files</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts
{
    <script src="~/js/bulkCvsJobsHistory.js"></script>
}