@model IEnumerable<JobViewModel>

@{
    ViewData["Title"] = "Jobs";
}

<h2>Jobs</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Job</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Job Name</th>
            <th>Description</th>
            <th>Batch</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.Title</td>
                <td>@job.Description</td>
                <td>@job.BatchName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@job.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@job.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@job.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>