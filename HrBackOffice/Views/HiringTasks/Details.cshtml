@model TaskDetailsViewModel
@{
    ViewData["Title"] = "Task Details";
}

<div class="container-fluid">
    <h2>Task Details</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h5>Task Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Batch:</strong> @Model.EmployeeTask.HiringTask.Batch.BatchName</p>
                    <p><strong>Stage:</strong> @Model.EmployeeTask.HiringTask.HiringStage.Name</p>
                    <p><strong>Department:</strong> @Model.EmployeeTask.HiringTask.Batch.Job.Department.Name</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Status:</strong> @Model.EmployeeTask.Status</p>
                    <p><strong>Assigned Date:</strong> @Model.EmployeeTask.AssignedDate.ToString("yyyy-MM-dd")</p>
                    <div class="mt-2">
                        <div class="btn-group">
                            <a asp-action="UpdateTaskStatus" asp-route-id="@Model.EmployeeTask.Id" asp-route-status="New" class="btn btn-outline-primary @(Model.EmployeeTask.Status == "New" ? "active" : "")">New</a>
                            <a asp-action="UpdateTaskStatus" asp-route-id="@Model.EmployeeTask.Id" asp-route-status="Active" class="btn btn-outline-primary @(Model.EmployeeTask.Status == "Active" ? "active" : "")">Active</a>
                            <a asp-action="UpdateTaskStatus" asp-route-id="@Model.EmployeeTask.Id" asp-route-status="Hold" class="btn btn-outline-primary @(Model.EmployeeTask.Status == "Hold" ? "active" : "")">Hold</a>
                            <a asp-action="UpdateTaskStatus" asp-route-id="@Model.EmployeeTask.Id" asp-route-status="Completed" class="btn btn-outline-primary @(Model.EmployeeTask.Status == "Completed" ? "active" : "")">Completed</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h4>Applicants</h4>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Applied Date</th>
                    <th>Current Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var applicant in Model.Applicants)
                {
                    <tr>
                        <td>@applicant.AppUser.DisplayName</td>
                        <td>@applicant.AppUser.Email</td>
                        <td>@applicant.AppliedDate.ToString("yyyy-MM-dd")</td>
                        <td>@applicant.Status</td>
                        <td>
                            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#updateStatusModal-@applicant.ApplicationId">
                                Update Status
                            </button>
                            <a href="#" class="btn btn-info btn-sm">View Profile</a>
                        </td>
                    </tr>

                    <!-- Modal for Status Update -->
                    <div class="modal fade" id="updateStatusModal-@applicant.ApplicationId" tabindex="-1" role="dialog" aria-labelledby="updateStatusModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <form asp-action="UpdateStatus" method="post">
                                    <input type="hidden" name="applicantId" value="@applicant.ApplicationId" />
                                    <input type="hidden" name="taskId" value="@Model.EmployeeTask.Id" />

                                    <div class="modal-header">
                                        <h5 class="modal-title" id="updateStatusModalLabel">Update Status for @applicant.AppUser.DisplayName</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label for="status-@applicant.ApplicationId">Status</label>
                                            <select class="form-control" id="status-@applicant.ApplicationId" name="status">
                                                @foreach (var status in Model.AvailableStatuses)
                                                {
                                                    <option value="@status" selected="@(status == applicant.Status)">@status</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="comments-@applicant.ApplicationId">Comments</label>
                                            <textarea class="form-control" id="comments-@applicant.ApplicationId" name="comments" rows="3"></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Save changes</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>