@model IEnumerable<IdentityRole>

<div class="container-fluid px-4">
    <h1 class="mt-4 mb-4">Role Management</h1>

    <div class="row">
        <div class="col-xl-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fas fa-user-shield me-2"></i>
                        <span class="font-weight-bold">Create New Role</span>
                    </div>
                </div>
                <div class="card-body">
                    <partial name="RoleFormPartialView" model="new RoleFormViewModel()" />
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <i class="fas fa-users-cog me-2"></i>
                    <span class="font-weight-bold">Role Listings</span>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover border">
                                <thead class="table-light">
                                    <tr>
                                        <th><i class="fas fa-tag me-1"></i>Role Name</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model)
                                    {
                                        <tr>
                                            <td class="align-middle">
                                                <span class="badge bg-primary">@role.Name</span>
                                            </td>
                                            
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id" title="Edit Role">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@role.Id" title="Delete Role">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                   
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            No roles have been created yet. Use the form above to create your first role.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

