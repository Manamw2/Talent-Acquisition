
@model List<SimplifiedHiringStageDto> 

<div class="container">
    <div class="card mt-4 border-0">
        <div class="card-header bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Hiring Stages List</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="HiringStage" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>  Create New Stage
                    </a>
                </div>
            </div>
        </div>
    </div>
    <table id="myTable" class="table-bordered table-striped w-100 table">
        <thead>
            <tr>
                <th>
                    Stage Name
                </th>
                <th>
                    Outcome Type
                </th>
                <th>
                    Create At
                </th>
                <th>
                    Created By
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts 
{
    @{
        <script src="~/js/HiringStage.js"></script>
    }
}