<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/fontawesome.css" />
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/LayoutStyle.css" />
    <link rel="icon" href="~/images/st.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top navbar-dark">
            <div class="container">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <img src="~/images/logo.png" alt="" width="150" />
                </a>
                <a class="navbar-brand">
                </a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Applicant" asp-action="Index">Jobs</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                    <span class="nav-item">
                        <span class="fa-stack">
                            <a href="https://www.facebook.com/share/1BDZiUnVuB/">
                                <i class="fas fa-circle fa-stack-2x"></i>
                                <i class="fab fa-facebook-f fa-stack-1x text-white"></i>
                            </a>
                        </span>
                    </span>
                    <span class="nav-item">
                        <span class="fa-stack">
                            <a href="https://www.linkedin.com/company/softtrend/">
                                <i class="fas fa-circle fa-stack-2x"></i>
                                <i class="fab fa-linkedin fa-stack-1x text-white"></i>
                            </a>
                        </span>
                    </span>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid custom-container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="footer-content">
            <!-- Company Info Section -->
            <div class="footer-section">
                <img src="~/images/logo.png" alt="Company Logo" style="margin-bottom: 20px; max-width: 150px;">
                <div class="company-info">
                    <p>SoftTrend is a fast-growing private company established in 2012, specialized in Software Licensing and IT services & solutions. We provide our clients with full solutions which include: Licensing, Software Solutions, IT Infrastructure Services.</p>
                </div>
                <div class="social-icons">
                    <a href="https://www.facebook.com/share/1BDZiUnVuB/">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="https://www.linkedin.com/company/softtrend/">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                </div>
            </div>

            <!-- Partners Section -->
            <div class="footer-section">
                <h3>Partners</h3>
                <ul class="partners-list">
                    <li><a href="#">Microsoft</a></li>
                    <li><a href="#">Kaspersky</a></li>
                    <li><a href="#">SOPHOS</a></li>
                    <li><a href="#">Dell</a></li>
                    <li><a href="#">FORTINET</a></li>
                </ul>
            </div>

            <!-- More Partners -->
            <div class="footer-section">
                <h3>&nbsp;</h3>
                <ul class="partners-list">
                    <li><a href="#">VMWare</a></li>
                    <li><a href="#">Cisco</a></li>
                    <li><a href="#">Citrix</a></li>
                    <li><a href="#">VERITAS</a></li>
                    <li><a href="#">Symantec</a></li>
                </ul>
            </div>

            <!-- Contact Section -->
            <div class="footer-section">
                <h3>Contact Us</h3>
                <ul class="contact-info">
                    <li>
                        <i class="fas fa-phone"></i>
                        <span>+20 (2) 212 67 000</span>
                    </li>
                    <li>
                        <i class="fas fa-fax"></i>
                        <span>+20 (2) 212 67 026</span>
                    </li>
                    <li>
                        <i class="fas fa-mobile-alt"></i>
                        <span>+20 (10) 699 662 77</span>
                    </li>
                    <li>
                        <i class="fas fa-envelope"></i>
                        <span>info@soft-trend.com</span>
                    </li>
                    <li>
                        <i class="fas fa-map-marker-alt"></i>
                        <span>30, Street 85 off 16. Sarayat Maadi, Maadi, Cairo, Egypt</span>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Footer Bottom -->
        <div class="footer-bottom">
            <p>
                Copyright © 2012-2025 <a href="#">SoftTrend</a>. All rights reserved |
                <a href="#">Terms & Conditions</a> — <a href="#">Privacy Policy</a>
            </p>
        </div>
    </footer>

    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/jquery-3.7.1.js"></script>
    <script src="~/js/script.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
