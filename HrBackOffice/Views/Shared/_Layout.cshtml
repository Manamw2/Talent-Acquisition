    <style>
        /* Color Palette */
        .navbar-dark {
            background-color: #343a40; /* Dark color for the navbar */
        }

        .sb-sidenav-dark {
            background: linear-gradient(135deg, #1e2a33, #2c3e50); /* Gradient background for the sidebar */
        }

        /* Font and Typography */
        body {
            font-family: 'Poppins', sans-serif;
            font-size: 16px;
            color: #333333;
            background-color: #E0E0E0;
        }

        /* Navbar Customization */
        .navbar-brand img {
            height: 40px; /* Adjust height as needed */
            width: auto;
        }

        .navbar {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .nav-link:hover {
            background-color: rgba(0, 123, 255, 0.1);
            color: #007bff;
        }

        /* Sidebar Customization */
        .sb-sidenav-menu-heading {
            font-size: 1.1rem;
            font-weight: 600;
            color: #ddd;
        }

        .sb-sidenav .nav-link {
            padding: 10px 15px;
            color: #b0b0b0;
            text-transform: uppercase;
            font-weight: 600;
        }

        /* Card Style for Main Content */
        .card {
            margin-bottom: 20px;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #2c3e50;
            color: white;
            font-weight: bold;
        }

        /* Button Styles */
        .btn-primary {
            background: linear-gradient(135deg, #0062cc, #0056b3);
            color: white;
        }

        .btn-outline-secondary {
            border-color: #ddd;
            color: #ddd;
        }

        /* Footer Customization */
        .footer {
            background-color: #343a40;
            color: #ddd;
        }

            .footer a {
                color: #007bff;
            }
    </style>
</head>
<body>
    <header>
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
            <!-- Navbar Brand with Logo -->
            <a class="navbar-brand ps-3" href="index.html">
                <img src="~/images/Logo1.png" alt="Company Logo">
            </a>
            <!-- Sidebar Toggle -->
            <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
                <i class="fas fa-bars"></i>
            </button>
            <!-- Navbar Search -->
            <div class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
                <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user fa-fw"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="sb-sidenav-menu-heading">Security</div>
                            <a class="nav-link" asp-controller="Role" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                                Roles
                            </a>
                            <a class="nav-link" asp-controller="User" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                                Users
                            </a>
                        }

                        <div class="sb-sidenav-menu-heading">Website</div>
                        <a class="nav-link" asp-controller="Job" asp-action="Index">
                            <div class="sb-nav-link-icon"></div>
                            Jobs
                        </a>
                        <a class="nav-link" asp-controller="Batch" asp-action="Index">
                            <div class="sb-nav-link-icon"></div>
                            Batches
                        </a>
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/datatables-simple-demo.js"></script>
</body>
</html>