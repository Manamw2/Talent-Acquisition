<div class="hamburger-menu">
    <button class="navbar-toggler" type="button">
        <span class="navbar-toggler-icon">☰</span>
    </button>
</div>
<div class="sidebar" id="sidebar">
    <div class="sidebar-content">
        <div class="logo-container">
            <a href="/" class="logo-link">
                <img src="~/Logo.png" alt="Company Logo" class="company-logo">
            </a>
            <div class="logo-divider"></div>
        </div>
        <div class="sidebar-header">
            <h3>User Profile</h3>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "UserInfo" ? "active" : "")"
                   asp-controller="Profile"
                   asp-action="UserInfo">
                    <i class="fas fa-user"></i>
                    <span>User Information</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "UserApplications" ? "active" : "")"
                   asp-controller="Profile"
                   asp-action="UserApplications">
                    <i class="fas fa-file-alt"></i>
                    <span>User Applications</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "UserSettings" ? "active" : "")"
                   asp-controller="Profile"
                   asp-action="UserSettings">
                    <i class="fas fa-cog"></i>
                    <span>User Settings</span>
                </a>
            </li>
        </ul>
    </div>
</div>