@{
    ViewData["Title"] = "Password Reset Confirmation";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">
                    <h2 class="text-center">Password Set Successfully</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <p>Your password has been set successfully.</p>
                    </div>
                    <div class="d-grid gap-2">
                        <a asp-controller="Admin" asp-action="Login" class="btn btn-primary">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>