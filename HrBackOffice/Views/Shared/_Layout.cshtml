@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> UserManager
@inject SignInManager<AppUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | HR BackOffice</title>
    <link rel="icon" href="~/images/st.png" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/sidebar.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/quill@2/dist/quill.snow.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Include Quill stylesheet -->
    <!-- Bootstrap 5 (latest version) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/quill@2/dist/quill.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Include Quill library -->
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <script>
        disablePageUnloadEvents: ["unload"]
    </script>
    <style>
        /* User Profile Dropdown Styles */
        .user-profile-container {
            position: relative;
            padding: 10px 20px;
        }

        .user-profile-container img {
            border: 2px solid #2c3e50;
            transition: all 0.3s ease;
        }

        .user-profile-container img:hover {
            transform: scale(1.05);
            border-color: #8F1412;
        }

        .dropdown-menu {
            min-width: 200px;
            padding: 10px 0;
        }

        .dropdown-item {
            padding: 8px 15px;
            font-size: 0.95rem;
            transition: all 0.2s ease;
        }

        .dropdown-item:hover {
            background-color: #f8f9fa;
            color: #8F1412;
        }

        .dropdown-item i {
            width: 20px;
            text-align: center;
        }

        /* Nav Styles */
        .nav {
            display: flex;
            flex-direction: column;
            gap: 10px;
            padding: 20px;
        }

        .nav-item {
            margin-bottom: 10px;
            list-style: none;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 10px 15px;
            border-radius: 5px;
            color: #ecf0f1;
            font-size: 1.1rem;
            font-weight: 400;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            transform: translateX(5px);
            color: #ecf0f1;
            text-decoration: none;
        }

        .nav-link.active {
            background-color: #8F1412;
            color: #ecf0f1;
        }

        .nav-link i {
            margin-right: 15px;
            font-size: 1.2rem;
        }

        .nav-link span {
            font-size: 1rem;
            font-weight: 500;
        }

        /* Card Style for Main Content */
        .card {
            margin-bottom: 20px;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #2c3e50;
            color: white;
            font-weight: bold;
        }

        /* Button Styles */
        .btn-primary {
            background: linear-gradient(135deg, #0062cc, #0056b3);
            color: white;
        }

        .btn-outline-secondary {
            border-color: #ddd;
            color: #ddd;
        }

        /* Responsive layout */
        @@media (max-width: 991px) {
            .main-content-wrapper {
                margin-left: 0;
                width: 100%;
            }
        }

        @@media (max-width: 767px) {
            .user-profile-container {
                justify-content: flex-end !important;
                padding: 10px;
                position: absolute;
                top: 0;
                right: 0;
                z-index: 1000;
            }
        }
    </style>
</head>
<body>
    <!-- Mobile Sidebar Toggle Button -->
    <div class="hamburger-menu" id="hamburger-menu">
        <button class="navbar-toggler" type="button" id="sidebar-toggle">
            <span class="navbar-toggler-icon"><i class="fas fa-bars" style="color: white;"></i></span>
        </button>
    </div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-content">
            <div class="logo-container">
                <a href="#" class="logo-link">
                    <img src="~/images/Logo1.png" alt="Company Logo" class="company-logo">
                </a>
                <div class="logo-divider"></div>
            </div>

            <ul class="nav flex-column">
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Role" asp-action="Index">
                            <i class="fas fa-user"></i> <span>Roles</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="User" asp-action="Index">
                            <i class="fas fa-users"></i> <span>Users</span>
                        </a>
                    </li>
                }

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Job" asp-action="Index">
                        <i class="fas fa-briefcase"></i> <span>Jobs</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Applicant" asp-action="Index">
                        <i class="fas fa-user-tie"></i> <span>Applicants</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Batch" asp-action="Index">
                        <i class="fas fa-layer-group"></i> <span>Batches</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="CvsBulkUpload" asp-action="Index">
                        <i class="fa-solid fa-file-arrow-up"></i> CVs Upload
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Backdrop for mobile -->
    <div class="sidebar-backdrop" id="sidebar-backdrop"></div>

    <!-- Main Content -->
    <div class="main-content" id="main-content">
        <!-- User profile dropdown -->
        <div class="user-profile-container d-flex justify-content-end mb-3">
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    @{
                        var user = await UserManager.GetUserAsync(User);
                        var imageUrl = user?.ImageUrl ?? "/images/Logo1.png";
                    }
                    <img src="@imageUrl" alt="User" width="40" height="40" class="rounded-circle me-2">
                </a>
                <ul class="dropdown-menu dropdown-menu-end text-small shadow" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="ProfileIndex"><i class="fas fa-user me-2"></i>Profile</a></li>
                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="ChangePassword"><i class="fas fa-key me-2"></i>Change Password</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-controller="Admin" asp-action="Logout" method="post">
                            <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Content Area -->
        <div class="content-area">
            @RenderBody()
        </div>
    </div>

   

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/quill@2/dist/quill.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.6/signalr.min.js"></script>
    <!-- DataTables JS -->
    <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>