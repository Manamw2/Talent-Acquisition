@model UserRoleViewModel
@{
    ViewData["Title"] = "Edit HR User";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 mb-4">Edit @Model.UserName</h1>

    <div class="row">
        <div class="col-xl-6">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-user-edit me-2"></i>
                    <span class="font-weight-bold">Edit User Details</span>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit">
                        <input asp-for="UserId" class="form-control" hidden />

                        <div class="mb-3">
                            <label for="DisplayName" class="form-label fw-semibold">Display Name</label>
                            <input asp-for="DisplayName" id="DisplayName" class="form-control">
                            <span asp-validation-for="DisplayName" class="text-danger"></span>
                        </div>
                       

                        <h5>Assign Roles</h5>
                        <hr />
                        @for (int i = 0; i < Model.Roles.Count; i++)
                        {
                            <div class="form-check">
                                <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                                <label class="form-check-label">@Model.Roles[i].Name</label>
                            </div>
                        }
                        <br />

                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
