@model HiringStageDetailsVM
@{
    ViewData["Title"] = "Hiring Stage Details";
}

<div class="container py-4">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Hiring Stage Details</h4>
            <div>
                <a asp-controller="HiringStage" asp-action="Edit" asp-route-id="@Model.HiringStage.Id" class="btn btn-outline-primary">
                    <i class="bi bi-pencil"></i> Edit
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <!-- Stage Name -->
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="form-label fw-bold">Stage Name</label>
                        <p class="form-control-plaintext">@Model.HiringStage.Name</p>
                    </div>
                </div>

                <!-- Required Employees -->
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="form-label fw-bold">Required Employees</label>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Department</th>
                                        <th>Number of Employees</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var requirement in Model.HiringStage.StageDepartmentNeeds)
                                    {
                                        <tr>
                                            <td>@requirement.Department.Name</td>
                                            <td>@requirement.EmployeesNeeded</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Parameters -->
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="form-label fw-bold">Parameters</label>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Parameter</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var parameter in Model.Parameters)
                                    {
                                        <tr>
                                            <td>@parameter.Name</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Outcomes -->
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="form-label fw-bold">Outcomes</label>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Outcome</th>
                                        <th>Application Status</th>
                                        <th>Notification</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var outcome in Model.Outcomes)
                                    {
                                        <tr>
                                            <td>@outcome.Name</td>
                                            <td>@outcome.ApplicationStatus</td>
                                            <td>
                                                <div class="card">
                                                    <div class="card-body bg-light p-2">
                                                        <pre class="mb-0" style="white-space: pre-wrap;">@outcome.NotificationMessage</pre>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row py-2">
        <div class="col-6 col-lg-3">
            <a asp-controller="HiringStage" asp-action="Index" class="btn btn-light form-control border">Back to Stages List</a>
        </div>
    </div>
</div>